<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10_dp"
            android:fontFamily="@font/lato_bold"
            android:text="Calo trong ngày: "
            android:textSize="@dimen/textsize_20_sp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_calo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_14_dp"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/md_black_1000"
            android:textSize="@dimen/textsize_20_sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_calo_remain_title"
            app:layout_constraintStart_toEndOf="@id/tv_calo_remain_title"
            app:layout_constraintTop_toTopOf="@id/tv_calo_remain_title"
            tools:text="12203" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_morning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_calo_remain_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10_dp"
            android:fontFamily="@font/lato_bold"
            android:text="Calo Bữa Sáng: "
            android:textSize="@dimen/textsize_20_sp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_morning_calo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_14_dp"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/md_black_1000"
            android:textSize="@dimen/textsize_20_sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_calo_remain_title"
            app:layout_constraintStart_toEndOf="@id/tv_calo_remain_title"
            app:layout_constraintTop_toTopOf="@id/tv_calo_remain_title"
            tools:text="12203" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_afternoon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10_dp"
            android:fontFamily="@font/lato_bold"
            android:text="Calo Bữa Trưa: "
            android:textSize="@dimen/textsize_20_sp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_afternoon_calo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_14_dp"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/md_black_1000"
            android:textSize="@dimen/textsize_20_sp"
            tools:text="12203" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_evening"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10_dp"
            android:fontFamily="@font/lato_bold"
            android:text="Calo Bữa Tối: "
            android:textSize="@dimen/textsize_20_sp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_evening_calo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_14_dp"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/md_black_1000"
            android:textSize="@dimen/textsize_20_sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_calo_remain_title"
            app:layout_constraintStart_toEndOf="@id/tv_calo_remain_title"
            app:layout_constraintTop_toTopOf="@id/tv_calo_remain_title"
            tools:text="12203" />
    </LinearLayout>

</LinearLayout>